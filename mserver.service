[Unit]
Description=Starting mserver Service
After=systemd-sysctl.service network.target dbus.service
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/msrv
ExecStart=/opt/msrv/msrv
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
TimeoutStopSec=10
Restart=on-failure
RestartSec=42s
StartLimitInterval=0
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=mserver

[Install]
WantedBy=multi-user.target
